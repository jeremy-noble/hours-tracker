<%- model_class = User -%>
<% provide(:title, 'Call In Hours') %>
<div class="page-header">
  <h1>Call In Hours - (All Unpaid Time Sheets)</h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Total Hours</th>
      <th>Total Cash</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @time_sheets.each do |time_sheet| %>
      <tr>
        <td><%= link_to "#{time_sheet.user.first_name} #{time_sheet.user.last_name}", user_path(time_sheet.user) %></td>
        <%#= raise user.time_sheets.inspect %>
        <td><%= time_sheet.total_hours %></td>
        <td><%= number_to_currency(time_sheet.total_cash) %></td>
        <td>
          <%= link_to 'View All Time Sheets', user_time_sheets_path(time_sheet.user), :class => 'btn btn-mini' %>
          <%= link_to 'Edit User', edit_user_path(time_sheet.user), :class => 'btn btn-mini' %>
          <% if !current_user?(time_sheet.user) %>
          <%= link_to 'Delete User', user_path(time_sheet.user),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New User', new_user_path, :class => 'btn btn-primary' %>
