<% provide(:title, @user.name) %>
<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @user.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:hourly_rate) %>:</strong></dt>
  <dd><%= number_to_currency(@user.default_hourly_rate) %></dd>
</dl>

<div class="form-actions">
  <%= link_to 'Time Sheets', user_time_sheets_path(@user), :class => 'btn'  %>
  <% if can? :manage, @user %>
    <%= link_to 'Edit User', edit_user_path(@user), :class => 'btn' %>
    <%= link_to 'Delete User', user_path(@user),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end %>
</div>
