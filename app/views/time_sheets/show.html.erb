<%- model_class = TimeSheet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @time_sheet.user.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:entries) %>:</strong></dt>
  <dd><%= link_to 'Entries', user_time_sheet_entries_path(@user, @time_sheet) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:total_hours) %>:</strong></dt>
  <dd><%= @time_sheet.total_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid) %>:</strong></dt>
  <dd><%= @time_sheet.paid %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_time_sheets_path(@user), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_time_sheet_path(@user, @time_sheet), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_time_sheet_path(@user, @time_sheet),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
