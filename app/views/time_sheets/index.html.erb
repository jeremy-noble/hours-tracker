<%- model_class = TimeSheet -%>
<% provide(:title, model_class.model_name.human.pluralize + ' for ' + @user.name) %>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %> for <%= link_to @user.name, @user %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:time_sheet_id) %></th>
      <th><%= model_class.human_attribute_name(:created_on) %></th>
      <th><%= model_class.human_attribute_name(:total_hours) %></th>
      <th><%= model_class.human_attribute_name(:total_cash) %></th>
      <th><%= model_class.human_attribute_name(:paid) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @time_sheets.each do |time_sheet| %>
      <tr>
        <td># <%= time_sheet.id %></td>
        <td><%= nice_date time_sheet.created_at %></td>
        <td><%= time_sheet.total_hours %></td>
        <td><%= number_to_currency(time_sheet.total_cash) %></td>
        <td><%= yesno time_sheet.paid %></td>
        <td>
          <% if can? :read, time_sheet %>
          <%= link_to 'View/Add Hours', user_time_sheet_entries_path(@user, time_sheet), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :update, time_sheet %>
            <%= link_to 'Mark Paid', edit_user_time_sheet_path(@user, time_sheet), :class => 'btn btn-mini' %>
          <% end %>
          <% if can? :destroy, time_sheet %>
          <%= link_to 'Delete Time Sheet',
                      user_time_sheet_path(@user, time_sheet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.create_new_time_sheet', :default => t("helpers.links.create_new_time_sheet")),
            new_user_time_sheet_path,
            :class => 'btn btn-primary' %>
