<%- model_class = TimeSheet -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %> for <%= link_to @user.name, @user %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:total_hours) %></th>
      <th><%= model_class.human_attribute_name(:paid) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @time_sheets.each do |time_sheet| %>
      <tr>
        <td><%= time_sheet.nice_date %></td>
        <td><%= time_sheet.total_hours %></td>
        <td><%= time_sheet.paid %></td>
        <td>
          <%= link_to t('.view_time_sheet', :default => t("helpers.links.view_time_sheet")),
                      [@user, time_sheet], :class => 'btn btn-mini' %>
          <%= link_to t('.view_entries', :default => t("helpers.links.view_entries")),
                      user_time_sheet_entries_path(@user, time_sheet), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_time_sheet_path(@user, time_sheet), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_time_sheet_path(@user, time_sheet),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_time_sheet_path,
            :class => 'btn btn-primary' %>
