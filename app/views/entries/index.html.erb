<%- model_class = Entry -%>
<div class="page-header">
  <h1>Hours for <%= link_to "Time Sheet ##{@time_sheet.id}", user_time_sheets_path(@user) %></h1>
  <h2>Total Hours: <%= @time_sheet.total_hours %></h2>
  <h3>Total: <%= number_to_currency(@time_sheet.total_cash) %></h3>
  <h3>Paid: <%= yesno @time_sheet.paid %></h3>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:hours) %></th>
      <th><%= model_class.human_attribute_name(:project) %></th>
      <th><%= model_class.human_attribute_name(:hourly_rate) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= nice_date entry.date %></td>
        <td><%= entry.hours %></td>
        <td><%= entry.project %></td>
        <td><%= number_to_currency(entry.hourly_rate) %></td>
        <td>
          <%#= link_to t('.view_entry', :default => t("helpers.links.view_entry")),
                      user_time_sheet_entry_path(@user, @time_sheet, entry), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_time_sheet_entry_path(@user, @time_sheet, entry), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_time_sheet_entry_path(@user, @time_sheet, entry),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_time_sheet_entry_path,
            :class => 'btn btn-primary' %>
