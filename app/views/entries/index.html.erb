<%- model_class = Entry -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %> for <%= link_to "Time Sheet ##{@time_sheet.id}", user_time_sheets_path(@user) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:date) %></th>
      <th><%= model_class.human_attribute_name(:hours) %></th>
      <th><%= model_class.human_attribute_name(:project) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.nice_date %></td>
        <td><%= entry.hours %></td>
        <td><%= entry.project %></td>
        <td>
          <%= link_to t('.view_entry', :default => t("helpers.links.view_entry")),
                      user_time_sheet_entry_path(@user, @time_sheet, entry), :class => 'btn btn-mini' %>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_user_time_sheet_entry_path(@user, @time_sheet, entry), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      user_time_sheet_entry_path(@user, @time_sheet, entry),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_user_time_sheet_entry_path,
            :class => 'btn btn-primary' %>
